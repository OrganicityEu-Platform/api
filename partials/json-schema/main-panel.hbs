{{!
  Renders a json.schema inside a bootstrap-panel.
  @public
  @readonly
}}
<div {{#if title}}id="definition-{{htmlId title}}"{{/if}} class="panel panel-definition">
  {{#if title}}
    <div class="panel-heading">
      <h3 class="panel-title">
        {{#if anchor}}
          <a name="/definitions/{{title}}"></a>
        {{/if}}
        {{#if $ref}}
          {{title}}
        {{else}}
          {{title}}:
          <span class="json-property-type">{{>json-schema/datatype}}</span>
        {{/if}}
      </h3>
    </div>
  {{/if}}
  <div class="panel-body">
    {{#if $ref}}
      {{>json-schema/reference $ref}}
    {{else}}
      {{>json-schema/body}}
    {{/if}}
  </div>
</div>
